{
  "name": "podmate",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all -p dev:server dev:client",
    "dev:server": "npm --prefix server run dev",
    "dev:client": "npm --prefix client run dev",
    "build": "npm-run-all -s build:server build:client",
    "build:server": "npm --prefix server run build",
    "build:client": "npm --prefix client run build",
    "test": "npm-run-all -p test:server test:client",
    "test:server": "npm --prefix server run test",
    "test:client": "npm --prefix client run test"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}

